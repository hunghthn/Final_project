                                          <div class="mb-3">
                                            <label class="form-label">Số điện thoại*</label>
                                            <input type="text" class="form-control" name="user[phone]"  value="<%= @user.phone %>" required/>
                                          </div>
                                          <div class="mb-3">
                                            <label class="form-label pe-3">Giới tính*</label>

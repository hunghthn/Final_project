<% engine_transmission_attributes = [
  { label: "Kiểu động cơ", attribute: "engine_type" },
  { label: "Dung tích (cc)", attribute: "engine_capacity" },
  { label: "Công suất (mã lực)/vòng tua (vòng/phút)", attribute: "power" },
  { label: "Mô-men xoắn (Nm)/vòng tua (vòng/phút)", attribute: "torque" },
  { label: "Hộp số", attribute: "gearbox" },
  { label: "Hệ dẫn động", attribute: "drive_system" },
  { label: "Cần số điện tử", attribute: "automatic_transmission" },
  { label: "Loại nhiên liệu", attribute: "fuel_type" },
  { label: "Mức tiêu thụ nhiên liệu đường hỗn hợp (lít/100 km)", attribute: "fuel_consumption" }
] %>

<div class="accordion-item">
  <h2 class="accordion-header" id="headingTwo">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
      <span> <i class="flaticon-engine"></i>  Động cơ/hộp số </span>
    </button>
  </h2>
  <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
    <div class="accordion-body">
      <table class="table table-striped">
        <tbody>
          <% engine_transmission_attributes.each do |attr| %>
            <tr>
                <td class="fixed-width-td-1"> <%= attr[:label] %></td>
                <% @compared_models.each do |model| %>
                  <td class="fixed-width-td" id="<%= "#{attr[:attribute]}_for_model_#{model.id}" %>"><%= model.trims.first.engine_transmission.public_send(attr[:attribute]) %></td>
                <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

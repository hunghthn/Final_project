<% reviews.each do |review| %>
<div class="item">
    <div class="testimonial-block text-center">
      <i class="fa fa-quote-left"></i>
      <p class="text-white"><%= review.content %></p>
      <h6 class="text-red"><%= review.user.lastname %> <%= review.user.firstname %></h6>
    </div>
  </div>
<% end %>
          });
        },
        error: function(error) {
          console.log(error);
        }
      });
    });
    
    $(document).ready(function() {
      
        $('#exampleModal3').on('show.bs.modal', function(event) {
          var button = $(event.relatedTarget); 
          var cardealer = button.data('cardealer');
          var name = button.data('name');
          var email = button.data('email');
          var phone = button.data('phone');
          var preferredContact = button.data('preferredcontact');
          var note = button.data('note');
          var createdAt = button.data('created-at');
      
          var modal = $(this);
          console.log(preferredContact);
          console.log(modal.find('p[data-id="preferredcontact"]'));
          modal.find('p[data-id="cardealer"]').text(cardealer);
          modal.find('p[data-id="name"]').text(name);
          modal.find('p[data-id="email"]').text(email);
          modal.find('p[data-id="phone"]').text(phone);
          modal.find('p[data-id="preferredcontact"]').text(preferredContact);
          modal.find('p[data-id="note"]').text(note);
          modal.find('p[data-id="created-at"]').text(createdAt);
        });
      });
    
    </script>
